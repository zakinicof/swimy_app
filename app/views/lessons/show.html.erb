<%= render "shared/header" %>
<div class="container">
  <div class="row my-2">
    <h4 class="col-md-12 text-center">
      <%= "レッスン項目：#{@lesson.name}" %>
    </h4>
    <div class="col-md-12">
      <%= column_chart @progresses, width: "100%", height: "70vh" %>
    </div>
  </div>
  <div class="row">
    <h5 class="col-md-12 my-2">
      <%= link_to "レッスン一覧へ戻る", root_path %>
    </h5>
    <h5 class="col my-3">他の項目を編集する
      <% @lessons.where.not(id: @lesson.id).each do |lesson| %>
        <%= link_to "　#{lesson.name}", "/users/#{@user.id}/lessons/#{lesson.id}" %>
      <% end %>
    </h5>
      
  </div>
  
  
</div>