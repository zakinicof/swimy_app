<%= render "shared/header" %>
<div class="container-fluid bg-light">
  <div class="row my-2">
    <h4 class="col-md-12 text-center mt-5">
      <%= "レッスン項目：#{@lesson.name}" %>
    </h4>
    <div class="col-md-12">
      <%= bar_chart @progresses, width: "100%", height: "70vh" %>
    </div>
  </div>
  <div class="row">
    <h5 class="col-md-12 my-2">
      <%= link_to "レッスン一覧へ戻る", root_path %>
    </h5>
    <h5 class="col mt-3 mb-5">
      他の項目を確認する
      <% @lessons.where.not(id: @lesson.id).each do |lesson| %>
        <%= link_to "　#{lesson.name}", "/users/#{@user.id}/lessons/#{lesson.id}" %>
      <% end %>
    </h5>
  </div>
</div>
<%= render "shared/footer" %>