<link href="/assets/signin.css" rel="stylesheet">
<body  class="text-center" >
  <div class="form-signin">
    <h1 class="mb-4 font-weight-bold text-primary">
      Swimy
    </h1>
    <h5 class="h5 mb-3 ">
      ご利用ありがとうございます
    </h5>
    <h5 class="h5 mb-3 ">
      メールアドレスとパスワードを入力してログインしてください
    </h5>
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <div class='text-danger'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <%= f.email_field :email, id:"email", placeholder:"Email address", autofocus: true, class:"form-control mb-3" %>
      <%= f.password_field :password, class:"input-default", id:"password", placeholder:"Password", class:"form-control" %>
      <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block mb-3" %>
      <%= link_to "新規登録はこちら", new_user_registration_path %>
    <% end %>
  </div>
</body>