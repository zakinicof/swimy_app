<%# <link href="/assets/signin.css" rel="stylesheet"> %>
<body  class="text-center" >
  <div class="form-signin">
    <h1 class="mb-4 font-weight-bold text-primary">
      Swimy
    </h1>
    <h5 class="h5 mb-3 ">
      ご利用ありがとうございます
    </h5>
    <h5 class="h5 mb-3 ">
      下記の情報を入力して新規登録してください
    </h5>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
      <div class="text-danger">
      <%= render 'shared/error_messages', model: f.object, resource: resource %>
      </div>
      <label class="form-text text-left">
        メールアドレス
      </label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control mb-3" , placeholder:"携帯・PCどちらでも可" %>
      <label class="form-text text-left">
        パスワード
      </label>
      <%= f.password_field :password, autocomplete: "new-password" , class:"form-control mb-3" , placeholder:"6文字以上の半角英数字" %>
      <label class="form-text text-left">
        パスワード（確認）
      </label>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control mb-3" , placeholder:"同じパスワードを入力してください" %>
      <label class="form-text text-left">
        お名前
      </label>
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name" , class:"form-control mb-3" , placeholder:"例：山田" %>
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name" , class:"form-control mb-3" , placeholder:"例：太郎" %>
      <label class="form-text text-left">
        お名前（カナ）
      </label>
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last-name-kana" , class:"form-control mb-3" , placeholder:"例：ヤマダ" %>
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first-name-kana" , class:"form-control mb-3" , placeholder:"例：タロウ" %>
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-block mb-3" %>
      <%= link_to "ログインはこちら", new_user_session_path %>
    <% end %>
  </div>
</body>