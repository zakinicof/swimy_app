<%# <head>
  <link href="/assets/style.css" rel="stylesheet">
</head> %>
  <body class="text-center">
    <%= form_with model: @user, url: user_registration_path, class:"form" , local: true do |f| %>
      <h1 class="my-0 mr-md-auto font-weight-bold mb-5 text-primary">Swimy</h1>
      <h5 class="h5 mb-4 font-weight-normal">
          ご利用ありがとうございます。
      </h5>
      <h5 class="h5 mb-4 font-weight-normal">
          下記の情報を入力して新規登録してください。
      </h5>
      <%= render 'shared/error_messages', model: f.object, resource: resource %>
      <div class="field mt-5 mb-3">
        <label class="form-text text-left">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" , placeholder:"携帯・PCどちらでも可" %>
      </div>
      <div class="field mt-5 mb-3">
        <label class="form-text text-left">パスワード</label>
          <%= f.password_field :password, autocomplete: "new-password" , class:"form-control" , placeholder:"6文字以上の半角英数字" %>
      </div>

      <div class="field mt-5 mb-3">
        <label class="form-text text-left">パスワード（確認）</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control" , placeholder:"同じパスワードを入力してください" %>
      </div>

      <div class="field mt-5 mb-3">
        <label class="form-text text-left">お名前</label>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last-name" , class:"form-control" , placeholder:"例：田中" %>
      </div>

      <div class="field">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name" , class:"form-control" , placeholder:"例：太郎" %>
      </div>

      <div class="field mt-5 mb-3">
        <label class="form-text text-left">お名前（カナ）</label>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last-name-kana" , class:"form-control" , placeholder:"例：タナカ" %>
      </div>

      <div class="field mb-5">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first-name-kana" , class:"form-control" , placeholder:"例：タロウ" %>
      </div>

      <div class="actions">
          <%= f.submit "新規登録" , class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <div class="actions mt-4 mb-2">
        <%= link_to 'ログイン画面はこちら', new_user_session_path %>
      </div>
      <p class="mt-5 mb-3 text-muted">&copy; 2020</p>
    <% end %>
  </body>